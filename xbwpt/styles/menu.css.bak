#navigation
{ 
	list-style-type:none;
	width:800px;
	padding:20px 0px 20px 15px;
} 
#bigcatname{
	text-align:center;
	float:left;
	width:50px;
	height:30px;
	line-height:30px;
	border:1px solid #fff;
}
.soncatname{
	float:left;
	text-align:center;
	height:30px;
	line-height:30px;
	padding-left:10px;
	padding-right:10px;
}
#bar{
	float:left;
	width:817px;
	height:15px;
}
#navigation a:link, #navigation a:visited 
{ 
	display:block; 
	text-decoration:none; 
	color:#000;
} 

#navigation a:hover 
{ 
	color:#2687eb; 
	text-decoration:underline;
} 
#bigcatname a:hover{
	color:#FFF;
	background-color:#2687eb;
	text-decoration:none;
	
}
#catleft{
	width:400px;
	float:left;
}
#catright{
	width:400px;
	float:right;
}